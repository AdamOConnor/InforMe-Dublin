<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="22dp"
        android:text="@string/battery_saver"
        android:textSize="30sp"
        android:layout_toStartOf="@+id/batteryImage" />

    <ImageView
        android:id="@+id/batteryImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/battery01"
        android:layout_marginEnd="40dp"
        android:layout_alignTop="@+id/textView2"
        android:layout_alignParentEnd="true"
        android:contentDescription="Image of a battery icon." />

    <Switch
        android:id="@+id/batterySwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/batteryImage"
        android:layout_alignStart="@+id/textView2" />

</RelativeLayout>